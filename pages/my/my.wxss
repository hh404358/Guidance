}

.movablebox{
  /* display: none; */
  z-index:3;
  position: fixed;
  top:400px;
  width:100vw;
  height:100vh;
  background: #E3F7C8;
border-radius: 25px 25px 0px 0px;


}
.movablebox .head{
width: 100vw;
margin: auto;
height: 58px;
display: flex;
font-size: 16px;
line-height: 51px;
align-items: stretch;
background: #E3F7C8;
border-radius: 20px 20px 0px 0px;

}
.input-frame{
  width:100%;
  height:58px;
  display: flex;
}
.input{
  margin:auto;
  height: 37px;
  position: absolute;
  top:11px;
  width: 313px;
  display: flex;
  line-height: 37px;
  background: #D5E4C0;
  font-size:17px;
  box-shadow: 0px 4px 4.8px rgba(0, 0, 0, 0.07);
  border-radius: 21.5px;

}
.classfy{
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: flex-end;
padding: 0px;
gap: 5px;
position: absolute;
width: 271px;
height: 38px;
line-height: 38px;
left: 50px;
top: 58px;
color:  #9F9F9F;
font-weight: lighter;
border-bottom: 0.5px solid rgba(159, 159, 159, 0.24);
border-top: 0.5px solid rgba(159, 159, 159, 0.24);
transform: matrix(1, 0, 0, 1, 0, 0);

}

.item{
