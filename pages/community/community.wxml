<!--pages/community/community.wxml-->
<view  class="type">
  <view wx:if="{{!selected}}">
    <span wx:for="{{labels}}" wx:key="id" style="margin-left: 15px;" class="label" >
    {{item.name}}
    </span>
  </view>
    <view class="type-content" wx:else>
    <view class="title">
    <span class="main-title">我的频道</span>
    <span class="sub-title">点击进入频道</span>
    <button class="btn">进入编辑</button>
    <span class="select-reverse" bind:tap="handleSelect"></span>
    </view>
    <view class="formal">
      <span wx:for="{{formal}}" wx:key="id" class="formal">{{item.name}} </span>
    </view>
    <view class="title">
    <span class="main-title">推荐频道</span>
    <span class="sub-title">点击进入频道</span>
    </view>
    <view class="informal">
      <span wx:for="{{informal}}" wx:key="id" class="informal">{{item.name}}</span>
    </view>
     
    </view>
  <span class="select" bind:tap="handleSelect"></span>
  </view>
  <post-frame class="box"></post-frame>