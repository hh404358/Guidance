page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #E3F7C8;
}
.frame-container{
  background: #E3F7C8;
  color: #aaa;
}
#map{
  width: 100vw;
  height:100vh;
  z-index:0;
}
.map-block1{
  z-index:1;
  position: absolute;
  top:261px;
  left:330px;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 10px;
  font-size: 30rpx;
  line-height: 60rpx ;
}
.map-block2{
  z-index:1;
  position: absolute;
  bottom:162px;
  right:20rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 10px;
