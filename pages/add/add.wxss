/* pages/add/add.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #E3F7C8;
}

.title{
  border-top: 0.5px solid #B0B6B7;
  border-bottom:  0.5px solid #B0B6B7;
  font-family: 'Inder';
  font-style: normal;
  font-weight: 400;
  font-size: 15px;
  line-height: 30px;
  /* identical to box height */

  color: #B0B6B7;


}
.image-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
}

.uploaded-image {
  margin: 20rpx;
  width:200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  /* align-self: start;
  align-items: center; */
  color: #9F9F9F;
}
.block{
  margin: 20rpx;
  width:200rpx;
  height: 200rpx;
  background: #D6E5C1;
  display: flex;
  flex-direction: column;
  /* align-self: start;
  align-items: center; */
  color: #9F9F9F;
}
.img{
  width:60rpx;
  height: 60rpx;
  padding-top: 30rpx;
  margin: auto;
}
.body{
  display: flex;
  flex-direction: column;
  font-family: 'Inder';
  font-style: normal;
  font-weight: 400;
  font-size: 12px;
  height:  auto;
/* line-height: 100px; */

  color: #B0B6B7;
  margin-left: 20rpx;
  border-bottom:  0.5px solid #B0B6B7;

}
.body-footer{
  width: 100vw;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction:row;
}

.label{
  width: 80rpx;
  height: 40rpx;
  background: #D6E5C1;
  border-radius: 13.5px;

  font-family: 'Inder';
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  line-height: 40rpx;
  text-align: center;
  color: #45413C;

}
.user{
  margin-left: 20rpx;
  width: 80rpx;
  height: 40rpx;
  background: #D6E5C1;
  align-items: center;
  border-radius: 13.5px;
  font-family: 'Inder';
  font-style: normal;
  font-weight: 400;
  font-size: 20rpx;
  line-height: 40rpx;
  color: #45413C;
}
.pos{
  height: 40px;
  border-bottom:  0.5px solid #B0B6B7;
  display: flex;
}
.icon{
  margin: 20rpx;
  padding-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}
.public{
  height:40px;
  /* text-align: center; */
  border-bottom:  0.5px solid #B0B6B7;
  display: flex;
}
.text{
  margin-top: 10px;
  font-family: 'Inder';
  font-style: normal;
  font-weight: 400;
  font-size: 26rpx;
  line-height: 20px;
  color: #45413C;
}
.go{
  color:  #9F9F9F;
  transform: rotate(0deg);
  width: 20rpx;
  height: 20rpx;
  border-bottom: 1.5px solid #9F9F9F;
  border-right: 1.5px solid #9F9F9F;
  transform: rotate(135deg);

}
.draft{
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  bottom: 60rpx;
  left: 20rpx;

}
.save{
  position: relative;
  bottom:0rpx;
  left:200rpx;
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  background: linear-gradient(0deg, #F9DEA1 0%, rgba(243, 180, 36, 0.8572) 84%, rgba(248, 184, 39, 0.83) 100%);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25), inset 3px 9px 6px rgba(238, 176, 33, 0.8844);
  border-radius: 32px;


}
.send{
  position: fixed;
  left:160rpx;
  bottom:45rpx;
  width: 540rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(344.92deg, #B4BBBC 6.09%, #C2C2C2 89.39%);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 24.5px;
  color:white;

}
.addLabel{
  /* display: none; */
  z-index: 5;
  position: absolute;
  top:550rpx;
  width: 700rpx;
  height: 600rpx;
  background: #F8FEF0;
  border-radius: 10px;

}
.maintitle{
  margin:20rpx;
  font-family: 'B612 Mono';
  font-style: normal;
  font-weight: 400;
  font-size: 15px;
  line-height: 18px;
  color: #000000;
}
.subtitle{
  margin:20rpx;
  font-family: 'B612 Mono';
font-style: normal;
font-weight: 400;
font-size: 11px;
line-height: 13px;

color: #9F9F9F;
}
.title{
border: 1px solid rgba(159, 159, 159, 0.15);
}
.showTag{
  display: flex;
  flex-direction: row;
}
/* 已选择标签样式 */
.selected-tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: auto;
  width: 230px;
  height: 30px;
  border: 1px solid #E3AE24;

}

.tag {
  padding: 5px 10px;
  margin: 5px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F8B827;
  border-radius: 103px;
  color:white;

}

.delete-icon {
  cursor: pointer;
  margin-left: 5px;
}


/* 弹出层样式 */
.popup {
  position: fixed;
  left: 200rpx;
  right: 0;
  top: 740rpx;
  display: flex;
  width:380rpx;
  height:200rpx;
  background: #F8FEF0;
  box-shadow: 0px 0px 4px 3px rgba(0, 0, 0, 0.06);

  justify-content: center;
  align-items: center;
}

/* 主题列表和子主题列表样式 */
.main-topics, .sub-topics {
  max-height:200rpx;
  border-radius: 10px;
  overflow: auto;
}

.main-topic, .sub-topic {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.main-topic:last-child, .sub-topic:last-child {
  border-bottom: none;
}
.mask{
    z-index: 3;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}
.public-frame{
  z-index:10;
  position: absolute;
  width:100vw;
  height: 153px;
  bottom: 0;

  background: #D4E7B9;
  border-radius: 17px 17px 0px 0px;

}
.selectPublic{
  box-sizing: border-box;
  position: absolute;
  left: 70rpx;
  top:80rpx;
  width: 80vw;
  height: 91px;
  background: #E3F7C8;
  border: 0.5px solid rgba(159, 159, 159, 0.29);
  border-radius: 8px;
  text-align: start;
  

}
.image{
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.con{
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: flex-start; /* 水平开始对齐 */
  margin:12rpx 20rpx;
}
/* 分割线样式 */
.divider {
  height: 1px; /* 分割线高度 */
  background-color: #e0e0e0; /* 分割线颜色 */
}
