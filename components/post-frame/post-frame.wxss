/* components/post-frame/post-frame.wxss */
.post {
  position: relative;
  margin-top:20rpx;
  margin-right: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: minmax(50%, auto);
  grid-gap: 15rpx;
  /* height:80%; */
}
.formal{
  position: absolute;
  top:0;
  left: 0%;
  width: 20%;
  height: 10%;
  padding-top: 10rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.45);
  border-radius: 7.5px 0px 5px;



}
.box{
  position: relative;
  height: 100%;
  margin-left: 3rpx;
  border-radius: 7.5px;
  background-color: white;
  /* display: flex;
  flex-wrap: wrap;
  padding-right: 20px ; */
  /* float: 200px; */
}
.post .box {
  transition: box-shadow 0.3s; /* 平滑过渡效果 */
}

.post .box:hover {
  box-shadow: 0 8px 16px rgba(0,0,0,0.2); /* 悬浮时的阴影效果 */
}

/* 如果你想要为每个 post 添加不同的悬浮效果，可以使用 :nth-child 选择器 */
.post .box:nth-child(odd):hover {
  flex:1;
  box-shadow: 0 8px 16px #db767680; /* 奇数项的悬浮效果 */
}

.post .box:nth-child(even):hover {
  flex:1;
  box-shadow: 0 8px 16px #70fd7080; /* 偶数项的悬浮效果 */
}
